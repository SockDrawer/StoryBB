		{{! Editing a character template }}
		<form method="post" action="{{scripturl}}?action=admin;area=templates;sa=save;{{session_url}}">
			<div class="cat_bar">
				<h3 class="catbg">{{{txt.char_templates}}}</h3>
			</div>
			<div class="windowbg">
				{{{txt.char_template_name}}} <input type="text" name="template_name" value="{{{context.template_name}}}">
				<br><br>
				{{{richtexteditor 'message' '' 'bbcBox'}}}
				<br>
				<div>
					{{session_form}}
					<input type="hidden" name="template_id" value="{{{context.template_id}}}">
					<input type="submit" value="{{{txt.save}}}" class="button_submit">
				</div>
			</div>
		</form>