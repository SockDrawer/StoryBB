
<form action="{{context.form_scripturl}}{{context.get_data}}" method="post" accept-charset="UTF-8" name="frmLogin" id="frmLogin">
	<div class="login" id="admin_login">
		<div class="cat_bar">
			<h3 class="catbg">
				{{txt.login}}
			</h3>
		</div>
		<div class="roundframe centertext noup">

{{#if context.incorrect_password}}
			<div class="error">{{txt.admin_incorrect_password}}</div>
{{/if}}
			<strong>{{txt.password}}:</strong>
			<input type="password" name="{{context.sessionCheckType}}_pass" size="24">
			{{> helpicon help='securityDisable_why'}}
			<br>
			{{session_form}}
			{{token_form 'admin-login'}}
			<input type="submit" style="margin-top: 1em;" value="{{txt.login}}" class="button_submit">
			{{{context.post_data}}}
		</div>
	</div>
	<input type="hidden" name="{{context.sessionCheckType}}_hash_pass" value="">
</form>
<script>
	document.forms.frmLogin.{{context.sessionCheckType}}_pass.focus();
</script>